{% extends "theme/base.twig" %}

{% block content %}
<h2>User List</h2>
<div id="list">
    search
    <input type="text" v-model="search_text">

    <table border="1">
        <thead>
            <tr>
                <th></th>
                <th>name</th>
                <th>email</th>
                <th>department</th>
                <th>title</th>
            </tr>
        </thead>
        <tbody>
        <tr v-for="(u, index) in list_sort">
            <td><a :href="'/user/'+u.id">Edit</a></td>
            <td v-text="u.name"></td>
            <td v-text="u.email"></td>
            <td v-text="u.department"></td>
            <td v-text="u.title"></td>
        </tr>
        </tbody>
    </table>
</div>

{% endblock %}


{% block js_footer %}
    <script>
      var user_list = {{ user_list | raw }};
    </script>
    <script src="/assets/js/user/index.js?v={{ appVersion }}"></script>
{% endblock %}
